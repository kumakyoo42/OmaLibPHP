{
    "name": "kumakyoo/omalib",
    "description": "Library for using OMA files.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Kumakyoo\\OmaLib\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kumakyoo\\OmaLib\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Bernhard Seckinger",
            "email": "bs@kumakyoo.de"
        }
    ],
    "require": {
        "php-64bit": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11 || ^12",
        "phpstan/phpstan": "^1.6 || ^2.0",
        "infection/infection": "^0.29.14"
    },
    "scripts": {
        "unittest": "XDEBUG_MODE=coverage vendor/bin/phpunit -c build/config/phpunit.xml.dist",
        "static": "vendor/bin/phpstan analyse -c build/config/phpstan.neon",
        "infection": "vendor/bin/infection --configuration=./build/config/infection.json.dist --threads=3 --min-msi=98"
    },
    "scripts-descriptions": {
        "unittest": "Runs the unit tests (phpunit). Configuration in build/config/phpunit.xml.dist.",
        "static": "Runs static code analysis (phpstan). Configuration in build/config/phpstan.neon.",
        "infection": "Runs mutation testing. Configuration in build/config/infection.json.dist."
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
